<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <h2 class="page-title">
          Editar Cliente
        </h2>
      </div>
    </div>
  </div>
</div>
<div class="page-body">
  <div class="container-xl">
    <div class="row row-cards">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            {{#if error}}
            <div class="alert alert-danger" role="alert">
              {{error}}
            </div>
            {{/if}}
            <form action="/clientes/{{cliente._id}}?_method=PUT" method="POST">
              <div class="form-group mb-3">
                <label class="form-label required">Nombre</label>
                <input type="text" name="nombre" class="form-control" value="{{cliente.nombre}}" required>
              </div>
              <div class="form-group mb-3">
                <label class="form-label">Teléfono</label>
                <input type="text" name="telefono" class="form-control" value="{{cliente.telefono}}">
              </div>
              <div class="form-group mb-3">
                <label class="form-label">Deuda (€)</label>
                <input type="number" name="deuda" class="form-control" value="{{cliente.deuda}}" step="0.01" min="0">
              </div>
              <div class="form-footer">
                <a href="/clientes" class="btn btn-link">Cancelar</a>
                <button type="submit" class="btn btn-primary">Actualizar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
